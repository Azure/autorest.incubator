{
  "compilerOptions": {
    "outDir": "dist",
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": false,
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "stripInternal": true,
    "noEmitHelpers": false,
    "target": "es2017",
    "types": [
      "node",
      "mocha"
    ],
    "lib": [
      "es2017"
    ],
    "experimentalDecorators": true,
    "newLine": "LF",
    "baseUrl": "src",
    "paths": {
      "#common/*": [
        "common/*"
      ],
      "#remodeler/*": [
        "remodeler/*"
      ],
      "#lowlevel-csharp/*": [
        "lowlevel-csharp/*"
      ],
      "#csharp/*": [
        "csharp/*"
      ],
      "#powershell/*": [
        "powershell/*"
      ],
      "#highlevel/*": [
        "highlevel/*"
      ]
    },
    "plugins": [
      {
        "name": "tslint-language-service",
        "configFile": "./tslint.json"
      }
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.d.ts"
  ]
}